
{
  "name": "Listar Produtos Árvore Pão",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "minutes",
              "triggerAtMinute": 0
            }
          ]
        }
      },
      "id": "schedule_trigger",
      "name": "A cada hora",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [240, 300]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "http://host.docker.internal:8000/api/v1/produtos/",
        "options": {
          "headers": {
            "Content-Type": "application/json"
          }
        }
      },
      "id": "http_request",
      "name": "Buscar Produtos",
      "type": "n8n-nodes-base.httpRequest",
      "position": [460, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json.produtos.length}}",
              "operation": "largerEqual",
              "value2": "1"
            }
          ]
        }
      },
      "id": "if_node",
      "name": "Tem Produtos?",
      "type": "n8n-nodes-base.if",
      "position": [680, 300]
    }
  ],
  "connections": {
    "A cada hora": {
      "main": [
        [
          {
            "node": "Buscar Produtos",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Buscar Produtos": {
      "main": [
        [
          {
            "node": "Tem Produtos?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
