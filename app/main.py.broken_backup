from fastapi import FastAPI
import uvicorn

app = FastAPI(title="Árvore Pão - Teste Básico")

@app.get("/health")
def health_check():
    return {"status": "ok", "message": "API funcionando"}

@app.get("/")
def root():
    return {"message": "Sistema Árvore Pão - Teste Básico"}

if __name__ == "__main__":
    uvicorn.run(app, host="0.0.0.0", port=8000)
